{
  "compilerOptions": {
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": false,    
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",    
    "lib": [ "dom", "esnext" ]
  },
  
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
